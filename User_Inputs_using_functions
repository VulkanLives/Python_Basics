def happyBirthdayEmily(): #function for Bday for Emily
    print("Happy Birthday to you!")
    print("Happy Birthday to you!")
    print("Happy Birthday, dear Emily.")
    print("Happy Birthday to you!")

def happyBirthdayAndre(): #function for Bday for Andre
    print("Happy Birthday to you!")
    print("Happy Birthday to you!")
    print("Happy Birthday, dear Andre.")
    print("Happy Birthday to you!")

def customName(name): #function for Bday for user choice of name
    print("Happy Birthday to you!")
    print("Happy Birthday to you!")
    print("Happy Birthday, dear ",name,".") #uses name passed to it userChoice on 3rd "if satement below"
    print("Happy Birthday to you!")

user_input = (int(input("who would like to sing happy birthday to? <1> Emily or <2> Andre")))

if user_input == 1:
    happyBirthdayEmily()
if user_input == 2:
    happyBirthdayAndre()

print("let's refine this, who would like to sing happy birthday to? <1> Emily or <2> Andre or <3> to chose whatever name you wish")
user_input = (int(input("enter your answer: \t")))
if user_input == 1:
    happyBirthdayEmily()
if user_input == 2:
    happyBirthdayAndre()
if user_input == 3:
    userChoice = (str(input("Who would you like yo say happy birthday to?")))
    customName(userChoice)
